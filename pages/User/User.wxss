}

.userPic > image:nth-child(3){
  position:absolute;
  /* justify-content: right; */
  width: 70rpx;
  height: 70rpx;
  border-radius:20%;
  border-color: black;
  margin-top: 96rpx;
  margin-bottom: 10rpx;
  margin-left: 660rpx;
  background-color: rgb(255, 255, 255);
}

.userPic > text{
  position:absolute;
  /* background: #87cefa; */
