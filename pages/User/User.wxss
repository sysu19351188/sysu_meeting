.myMeeting{
  width: 90%;
  margin: 0 auto;
  height: 500rpx;
  margin-top: 20rpx;
}

.mmTitle{
  width: 100%;
  height: 80rpx;
  border-top: 2rpx solid #1e6c9c;
  border-bottom: 2rpx solid #1e6c9c;
  margin-bottom: 10rpx;
  border-right: 2rpx solid #1e6c9c;
}

.mmTitle-text{
  line-height: 80rpx;
  width: 30%;
  text-align: center;
  border-left: 7px solid #1e6c9c;
  font-weight: 700;
  float: left;
}

.mmTitle-more{
  float: right;
  line-height: 80rpx;
  font-size: 24rpx;
  color: rgb(90, 102, 102);
  margin-right: 30rpx;
}

.mmList{
  margin-top: 4rpx;
}

.mmList-item{
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 70rpx;
  border-top: 2rpx solid #1e6c9c;
  border-bottom: 2rpx solid #1e6c9c;
  border-left: 2rpx solid #1e6c9c;
  border-right: 2rpx solid #1e6c9c;
  /* text-align: center; */
  background-color: rgb(236, 247, 247);
}

.mmList-text{
  margin-top: 15rpx;
  font-size: 30rpx;
  font-weight: 700;
}

.mmList-more{
  width: 16rpx;
  height: 16rpx;
  margin-top: 28rpx;
  border-top: 4rpx solid rgb(0, 0, 0);
  border-right: 4rpx solid rgb(0, 0, 0);
  transform: rotate(45deg);
  right: -20rpx;
  top: 10rpx;
}

.mmList-margin{
  height: 4rpx;
}

#userButton{
  width: 690rpx;
  margin: 44rpx auto 0;
}

#userButton > button{
  width: 690rpx;
  height: 88rpx;
  font-size: 36rpx;
}

#userButton > button:nth-child(1){
  /* background: #87cefa;
  color: #fff; */
  background: #fff;
  border: 2rpx solid #87cefa;
  margin: 36rpx 0;
}

#userButton > button:nth-child(2){
  background: #fff;
  border: 2rpx solid #87cefa;
  margin: 36rpx 0;
}