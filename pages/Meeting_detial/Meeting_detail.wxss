/* pages/Meeting_detial/Meeting_detail.wxss */
.Meeting{
  width: 90%;
  margin: 0 auto;
  height: 500rpx;
  margin-top: 20rpx;
}

.title{
  width: 100%;
  height: 80rpx;
  border-top: 2rpx solid #1e6c9c;
  border-bottom: 2rpx solid #1e6c9c;
  margin-bottom: 10rpx;
  border-left: 4px solid #1e6c9c;
  border-right: 4px solid #1e6c9c;
  margin-bottom: 30rpx;
}

.title-text{
  display: flex;
  justify-content: center;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
  font-weight: 700;
}

.Info-title{
  display: flex;
  width: 100%;
  height: 70rpx;
  border-top: 2rpx solid #1e6c9c;
  /* border-bottom: 2rpx solid #1e6c9c; */
  border-left: 2px solid #1e6c9c;
  border-right: 2px solid #1e6c9c;
  text-align: center;
  background-color: rgb(236, 247, 247);
}

.Info{
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 50rpx;
  /* border-top: 2rpx solid #1e6c9c; */
  border-bottom: 2rpx solid #1e6c9c;
  border-left: 2px solid #1e6c9c;
  border-right: 2px solid #1e6c9c;
  text-align: center;
  background-color: rgb(214, 214, 214);
  font-size: 32rpx;
  font-weight: 700;
}

.D-text{
  width: 100%;
  margin-top: 30rpx;
  border-top: 2rpx solid #1e6c9c;
  border-bottom: 2rpx solid #1e6c9c;
  margin-bottom: 10rpx;
  border-left: 4px solid #1e6c9c;
  border-right: 4px solid #1e6c9c;
  font-size: 38rpx;
}

.Buttons > button{
  width: 690rpx;
  height: 88rpx;
  font-size: 36rpx;
}

.Buttons > button:nth-child(1){
  background: #fff;
  border: 6rpx solid #208fd4;
  margin: 36rpx 0;
}

.Buttons > button:nth-child(2){
  background: #fff;
  border: 6rpx solid #208fd4;
  margin: 36rpx 0;
}